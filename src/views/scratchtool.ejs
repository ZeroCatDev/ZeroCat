// 辅助函数：发送带 token 的 API 请求
function apiRequest(options) {
  const token = TokenManager.getToken();
  const headers = options.headers || {};

  if (token) {
    headers.Authorization = `Bearer ${token}`;
  }

  return $.ajax({
    ...options,
    headers,
  });
}

