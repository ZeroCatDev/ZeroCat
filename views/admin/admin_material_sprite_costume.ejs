	<table class="layui-hide" id="TableOne" lay-filter="TableOne"></table>
</div>

<style>
	.layui-table-cell{
		height: auto!important;
	}
	.costumeImage{ 
		height: 68px !important;
		white-space: normal;
	}
</style>
<script type="text/html" id="imgTemp">
	<img class="costumeImage" src="/material/asset/{{d.md5ext}}">
</script>

