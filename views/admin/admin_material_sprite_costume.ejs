	<div class="layui-btn-container">
		<button class="layui-btn layui-btn-sm layui-btn-danger" onclick="AddSpriteCostume()">添加造型</button>
		<span class="layui-btn layui-btn-sm layui-btn-primary layui-btn-disabled" >说明：一个角色，最少必有一个造型</span>
	</div>
	</script>
	<script type="text/html" id="TableOne_tool">
		{{#  if(d.len > 1){ }}
		<span class="layui-btn layui-btn-xs layui-btn-danger" lay-event="DelSpriteCostume">移除此造型</span>
		{{#  } }}
	</script>
</body>

<script>_id='<%= _id%>';</script>
<script type="text/javascript" src="<%= process.env.staticurl %>/js/admin/material_sprite_costume.js"></script>
</html>