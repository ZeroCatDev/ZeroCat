
<script type="text/javascript" src="<%= process.env.staticurl %>/layui/layui.all.js"></script>
<script type="text/javascript" src="<%= process.env.staticurl %>/layui/jquery.min.js"></script>
  <link rel="stylesheet" href="<%= process.env.staticurl %>/layui/css/layui.css">	
<!-- 内容主体区域 -->
<div style="margin:12px 12px 8px 12px;">
	<table class="layui-hide" id="TableOne" lay-filter="TableOne"></table>
</div>


<script type="text/html" id="TableOne_bar">
	<div class="layui-btn-container">
		<button class="layui-btn layui-btn-sm layui-btn-danger" onclick="AddSpriteSound()">添加声音</button>
		<span class="layui-btn layui-btn-sm layui-btn-primary layui-btn-disabled" >说明：一个角色，最少必有一个声音</span>
	</div>
	</script>
	<script type="text/html" id="TableOne_tool">
		<audio id="PlayWav{{d.index}}" src="/material/asset/{{d.md5ext}}" preload="none"></audio>
		{{#  if(d.format == ''){ }}
		<span class="layui-btn layui-btn-xs layui-btn-warm" lay-event="playSoundMate">试听</span>
		{{#  } else { }}
		<span class="layui-btn layui-btn-xs layui-btn-primary" lay-event="playSoundMate">试听</span>
		{{#  } }}

		{{#  if(d.len > 1){ }}
		<span class="layui-btn layui-btn-xs layui-btn-danger" lay-event="DelSpriteSound">移除此声音</span>
		{{#  } }}
	</script>
</body>

<script>_id='<%= _id%>';</script>
<script type="text/javascript" src="<%= process.env.staticurl %>/js/admin/material_sprite_sound.js"></script>
</html>